<Window x:Class="QuitHubWPF_App.CreateQuitPlanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:QuitHubWPF_App"
        mc:Ignorable="d"
        Title="Create a Quit Plan" Height="580" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#E8F5E9">

    <Window.Resources>
        <DropShadowEffect x:Key="CardShadow" ShadowDepth="4" BlurRadius="10" Opacity="0.3"/>

        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2E7D32"/>
            <Setter Property="BorderBrush" Value="#388E3C"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C8E6C9"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <DockPanel LastChildFill="True">

            <!-- Navbar -->
            <Border Background="#66BB6A" Height="50" DockPanel.Dock="Top">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Title -->
                    <TextBlock Grid.Column="0"
           Text="Create a Quit Plan"
           FontSize="18"
           FontWeight="Bold"
           Foreground="White"
           VerticalAlignment="Center"
           Margin="20,0,0,0" />

                    <!-- User button -->
                    <Button Grid.Column="1"
        Content="User"
        Click="Back_Click"
        Style="{StaticResource RoundedButtonStyle}"
        Width="80"
        Height="30"
        Margin="10,0"/>

                    <!-- Logout button -->
                    <Button Grid.Column="2"
        Content="Logout"
        Click="Logout_Click"
        Background="Red"
        Foreground="White"
        FontWeight="Bold"
        Width="80"
        Height="30"
        Margin="10,0,20,0"
        BorderThickness="0"/>
                </Grid>
            </Border>

            <!-- Main content -->
            <Border Background="White" CornerRadius="20" Padding="30" Margin="40"
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    Effect="{StaticResource CardShadow}">
                <StackPanel Width="600">

                    <TextBlock Text="🚭 Select Reasons to Quit"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#2E7D32"
                               Margin="0 0 0 15"/>

                    <Border BorderBrush="#388E3C" BorderThickness="1" CornerRadius="8" Padding="10" Background="#F1F8E9" Margin="0,0,0,15">
                        <ScrollViewer Height="220">
                            <StackPanel x:Name="ReasonCheckboxPanel" />
                        </ScrollViewer>
                    </Border>

                    <Button Content="Create Plan"
                            Click="CreatePlan_Click"
                            Height="40"
                            Width="140"
                            Style="{StaticResource RoundedButtonStyle}"
                            Background="#43A047"
                            Foreground="White"
                            BorderThickness="0"
                            HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </DockPanel>
    </Grid>
</Window>
