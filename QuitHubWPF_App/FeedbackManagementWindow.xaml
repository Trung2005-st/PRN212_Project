<Window x:Class="QuitHubWPF_App.FeedbackManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Feedback Management" Height="600" Width="1200"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize">

    <Window.Resources>
        <LinearGradientBrush x:Key="GreenGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#66BB6A" Offset="0"/>
            <GradientStop Color="#388E3C" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2E7D32"/>
            <Setter Property="BorderBrush" Value="#388E3C"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C8E6C9"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Assets/Images/backgroundImg1.png" Stretch="Fill"/>
        </Grid.Background>

        <DockPanel>

            <!-- Navbar -->
            <Border DockPanel.Dock="Top" Background="{StaticResource GreenGradient}" Height="50">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Title -->
                    <TextBlock Grid.Column="0"
                               Text="Feedback Management"
                               Foreground="White"
                               FontWeight="Bold"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Margin="20,0,0,0" />

                    <!-- Search Box -->
                    <Border Grid.Column="1"
                            Background="White"
                            CornerRadius="8"
                            BorderBrush="#388E3C"
                            BorderThickness="2"
                            Margin="10,0"
                            Width="220"
                            Height="30"
                            VerticalAlignment="Center">
                        <DockPanel LastChildFill="True">
                            <TextBlock Text=""
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="13"
                                       Margin="6,0,4,0"
                                       VerticalAlignment="Center"
                                       Foreground="#388E3C"/>
                            <TextBox x:Name="txtSearch"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     VerticalContentAlignment="Center"
                                     FontSize="13"
                                     Foreground="Gray"
                                     Padding="0"
                                     Text="Search feedback..."
                                     GotFocus="txtSearch_GotFocus"
                                     LostFocus="txtSearch_LostFocus"
                                     TextChanged="txtSearch_TextChanged"/>
                        </DockPanel>
                    </Border>

                    <!-- Admin -->
                    <Button Grid.Column="2"
                            Content="Admin"
                            Click="Admin_Click"
                            Style="{StaticResource RoundedButtonStyle}"
                            Width="80"
                            Height="30"
                            Margin="10,0"/>

                    <!-- Logout -->
                    <Button Grid.Column="3"
                            Content="Logout"
                            Click="Logout_Click"
                            Background="Red"
                            Foreground="White"
                            FontWeight="Bold"
                            Width="80"
                            Height="30"
                            Margin="10,0,20,0"
                            BorderThickness="0"/>
                </Grid>
            </Border>

            <!-- Main content -->
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="400" />
                </Grid.ColumnDefinitions>

                <!-- Feedback list -->
                <Border Background="White" CornerRadius="10" BorderBrush="#388E3C" BorderThickness="2" Margin="10">
                    <DataGrid x:Name="FeedbackGrid"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              CanUserAddRows="False"
                              Margin="10"
                              SelectionChanged="FeedbackGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="FeedbackId" Binding="{Binding FeedbackId}" Width="*"/>
                            <DataGridTextColumn Header="UserId" Binding="{Binding UserId}" Width="*"/>
                            <DataGridTextColumn Header="Emoji" Binding="{Binding Emoji}" Width="*"/>
                            <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*"/>
                            <DataGridTextColumn Header="SentAt" Binding="{Binding SentAt}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>

                <!-- Input form -->
                <Border Grid.Column="1" Background="White" CornerRadius="10" BorderBrush="#388E3C" BorderThickness="2" Margin="10" Padding="20">
                    <StackPanel>
                        <!-- Feedback Info (Read-only display) -->
                        <TextBlock Text="UserId (can not change):" FontWeight="Bold" Margin="5,10,0,2" Foreground="Red" FontStyle="Italic"/>
                        <TextBox x:Name="txtUserId" Margin="0,0,0,5" IsReadOnly="True" />

                        <TextBlock Text="Emoji (can not change):" FontWeight="Bold" Margin="5,10,0,2" Foreground="Red" FontStyle="Italic"/>
                        <ComboBox x:Name="cbEmoji" Margin="0,0,0,5" FontSize="16" IsEnabled="False">
                            <ComboBoxItem Content="😢 Very Bad" Tag="😢"/>
                            <ComboBoxItem Content="😟 Bad" Tag="😟"/>
                            <ComboBoxItem Content="😐 Neutral" Tag="😐"/>
                            <ComboBoxItem Content="🙂 Good" Tag="🙂"/>
                            <ComboBoxItem Content="😁 Excellent" Tag="😁"/>
                        </ComboBox>

                        <TextBlock Text="Message (can not change):" FontWeight="Bold" Margin="5,10,0,2" Foreground="Red" FontStyle="Italic"/>
                        <TextBox x:Name="txtMessage" Margin="0,0,0,5" Height="60" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True"/>

                        <!-- Response -->
                        <TextBlock Text="Response Text:" FontWeight="Bold" Margin="5,10,0,2"/>
                        <TextBox x:Name="txtResponse" Margin="0,0,0,5" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

                        <TextBlock Text="Manage Action:" FontWeight="Bold" Margin="0,10,0,0"/>

                        <!-- Response Buttons -->
                        <WrapPanel HorizontalAlignment="Center" Margin="0,10,0,0">
                            <Button Content="Send Response" Width="100" Click="SendResponse_Click" Style="{StaticResource RoundedButtonStyle}"/>
                            <Button Content="Update Response" Width="100" Click="UpdateResponse_Click" Style="{StaticResource RoundedButtonStyle}"/>
                            <Button Content="Delete" Width="65" Click="DeleteFeedback_Click" Style="{StaticResource RoundedButtonStyle}"/>
                            <Button Content="Clear" Width="65" Click="ClearForm_Click" Style="{StaticResource RoundedButtonStyle}"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
