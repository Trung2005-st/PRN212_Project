<Window x:Class="QuitHubWPF_App.ManageInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Personal Info" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize">

    <Window.Resources>
        <LinearGradientBrush x:Key="GreenGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#66BB6A" Offset="0"/>
            <GradientStop Color="#388E3C" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2E7D32"/>
            <Setter Property="BorderBrush" Value="#388E3C"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C8E6C9"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Assets/Images/backgroundImg1.png" Stretch="Fill"/>
        </Grid.Background>

        <DockPanel>
            <!-- Navbar -->
            <DockPanel DockPanel.Dock="Top" Background="{StaticResource GreenGradient}" Height="50" LastChildFill="False">
                <TextBlock x:Name="txtWelcome"
                           Foreground="White"
                           FontWeight="Bold"
                           FontSize="16"
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"/>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center" Margin="0,0,20,0">
                    <Button Content="User"
                            Click="Back_Click"
                            Style="{StaticResource RoundedButtonStyle}"
                            Width="80" Height="32"/>
                    <Button Content="Logout"
                            Click="Logout_Click"
                            Background="Red"
                            Foreground="White"
                            FontWeight="Bold"
                            Width="80" Height="32"
                            BorderThickness="0"
                            Margin="10,0,0,0"
                            Cursor="Hand"/>
                </StackPanel>
            </DockPanel>

            <!-- Info Form Card -->
            <Grid Margin="40">
                <Border Background="#CCFFFFFF" CornerRadius="12" Padding="30" BorderBrush="#388E3C" BorderThickness="2">
                    <StackPanel>
                        <TextBlock Text="Manage Personal Information"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#388E3C"
                                   Margin="0,0,0,20"
                                   TextAlignment="Center"/>

                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Row 0 -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="10">
                                <Label Content="User ID" FontWeight="Bold"/>
                                <TextBox x:Name="txtUserId" IsReadOnly="True" Background="#EEE"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="10">
                                <Label Content="Username" FontWeight="Bold"/>
                                <TextBox x:Name="txtUsername"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="2" Margin="10">
                                <Label Content="Password" FontWeight="Bold"/>
                                <TextBox x:Name="txtPassword"
                                         IsReadOnly="True"
                                         Cursor="Hand"
                                         Background="White"
                                         BorderBrush="#388E3C"
                                         BorderThickness="1"
                                         PreviewMouseLeftButtonDown="txtChangePassword_Click"/>
                            </StackPanel>

                            <!-- Row 1 -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="10">
                                <Label Content="Full Name" FontWeight="Bold"/>
                                <TextBox x:Name="txtFullName"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="10">
                                <Label Content="Age" FontWeight="Bold"/>
                                <TextBox x:Name="txtAge"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="10">
                                <Label Content="Role" FontWeight="Bold"/>
                                <TextBox x:Name="txtRole" IsReadOnly="True" Background="#EEE"/>
                            </StackPanel>
                        </Grid>

                        <!-- Save & Cancel -->
                        <WrapPanel HorizontalAlignment="Right" Margin="10,0,0,0">
                            <Button Content="Save" Click="Save_Click"
                                    Style="{StaticResource RoundedButtonStyle}" Width="90"/>
                            <Button Content="Cancel" Click="Cancel_Click"
                                    Style="{StaticResource RoundedButtonStyle}" Width="90"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
