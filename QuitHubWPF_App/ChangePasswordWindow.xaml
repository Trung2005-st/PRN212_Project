<Window x:Class="QuitHubWPF_App.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Password"
        Height="340" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="White">

    <Window.Resources>
        <LinearGradientBrush x:Key="GreenGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#66BB6A" Offset="0"/>
            <GradientStop Color="#388E3C" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2E7D32"/>
            <Setter Property="BorderBrush" Value="#388E3C"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C8E6C9"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Border Background="#F9F9F9"
                CornerRadius="10"
                Padding="20"
                BorderBrush="#388E3C"
                BorderThickness="2"
                VerticalAlignment="Center"
                MinHeight="280">
            <StackPanel>
                <TextBlock Text="Change Password"
                           FontSize="18" FontWeight="Bold"
                           Foreground="#388E3C"
                           Margin="0,0,0,15"
                           TextAlignment="Center"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Old Password:" FontWeight="Bold" Margin="0,5,0,2"/>
                <PasswordBox x:Name="txtOldPassword" Margin="0,0,0,10"/>

                <TextBlock Text="New Password:" FontWeight="Bold" Margin="0,5,0,2"/>
                <PasswordBox x:Name="txtNewPassword" Margin="0,0,0,10"/>

                <TextBlock Text="Confirm New Password:" FontWeight="Bold" Margin="0,5,0,2"/>
                <PasswordBox x:Name="txtConfirmPassword" Margin="0,0,0,15"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Save" Width="90" Click="Save_Click" Style="{StaticResource RoundedButtonStyle}"/>
                    <Button Content="Cancel" Width="90" Click="Cancel_Click" Style="{StaticResource RoundedButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
