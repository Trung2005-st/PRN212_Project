<Window x:Class="QuitHubWPF_App.ChecklistStepWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuitHubWPF_App"
        mc:Ignorable="d"
        Title="ChecklistStepWindow"
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <LinearGradientBrush x:Key="GreenGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#66BB6A" Offset="0"/>
            <GradientStop Color="#388E3C" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2E7D32"/>
            <Setter Property="BorderBrush" Value="#388E3C"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C8E6C9"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <DockPanel>

        <!-- Navbar -->
        <Border DockPanel.Dock="Top" Background="{StaticResource GreenGradient}" Height="50">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <TextBlock Grid.Column="0"
                           Text="Your Quit Plan Steps"
                           Foreground="White"
                           FontWeight="Bold"
                           FontSize="16"
                           VerticalAlignment="Center"
                           Margin="20,0,0,0" />

               

                <!-- Back -->
                <Button Grid.Column="2"
                        Content="User"
                        Click="Back_Click"
                        Style="{StaticResource RoundedButtonStyle}"
                        Width="80"
                        Height="30"
                        Margin="10,0"/>

                <!-- Logout -->
                <Button Grid.Column="3"
                        Content="Logout"
                        Click="Logout_Click"
                        Background="Red"
                        Foreground="White"
                        FontWeight="Bold"
                        Width="80"
                        Height="30"
                        Margin="10,0,20,0"
                        BorderThickness="0"/>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Background="White" Margin="20" ClipToBounds="True">
            <Border CornerRadius="10" BorderBrush="#388E3C" BorderThickness="2" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- DataGrid -->
                    <DataGrid x:Name="dgSteps"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              SelectionMode="Single"
                              Margin="0,0,0,10"
                              Grid.Row="0"
                              IsReadOnly="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Binding="{Binding StepOrder}" Width="50" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Step Description" Binding="{Binding StepName}" Width="3*"/>
                            <DataGridCheckBoxColumn Header="Done?" Binding="{Binding IsCompleted}" Width="*"/>
                            <DataGridTextColumn Header="Note" Binding="{Binding Note}" Width="2*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Save Button -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Save Changes"
                                Style="{StaticResource RoundedButtonStyle}"
                                Click="Save_Click"
                                Width="130"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </DockPanel>
</Window>
