<Window x:Class="QuitHubWPF_App.DashboardReportManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard Report"
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F1F8E9">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Assets/Images/backgroundImg1.png" Stretch="Fill"/>
        </Grid.Background>

        <DockPanel>
            <!-- Navbar -->
            <Border DockPanel.Dock="Top" Background="#388E3C" Height="50">
                <DockPanel>
                    <TextBlock Text="Dashboard Report"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="20,0"/>
                    <Button Content="Logout"
                            HorizontalAlignment="Right"
                            Click="Logout_Click"
                            Background="Red"
                            Foreground="White"
                            Width="80"
                            Height="30"
                            Margin="0,0,20,0"
                            DockPanel.Dock="Right"/>
                </DockPanel>
            </Border>

            <!-- Stats Grid -->
            <UniformGrid Columns="3" Rows="3" Margin="30">
                <Border Background="White" BorderBrush="#388E3C" BorderThickness="2" CornerRadius="10" Margin="10" Padding="10">
                    <StackPanel>
                        <TextBlock Text="👤 Total Users" FontWeight="Bold" FontSize="14" Foreground="#2E7D32"/>
                        <TextBlock x:Name="txtUsers" FontSize="20" FontWeight="Bold" Foreground="Black"/>
                    </StackPanel>
                </Border>

                <Border Background="White" BorderBrush="#388E3C" BorderThickness="2" CornerRadius="10" Margin="10" Padding="10">
                    <StackPanel>
                        <TextBlock Text="🛑 Quit Plans" FontWeight="Bold" FontSize="14" Foreground="#2E7D32"/>
                        <TextBlock x:Name="txtPlans" FontSize="20" FontWeight="Bold" Foreground="Black"/>
                    </StackPanel>
                </Border>

                <Border Background="White" BorderBrush="#388E3C" BorderThickness="2" CornerRadius="10" Margin="10" Padding="10">
                    <StackPanel>
                        <TextBlock Text="💬 Feedbacks" FontWeight="Bold" FontSize="14" Foreground="#2E7D32"/>
                        <TextBlock x:Name="txtFeedbacks" FontSize="20" FontWeight="Bold" Foreground="Black"/>
                    </StackPanel>
                </Border>

                <Border Background="White" BorderBrush="#388E3C" BorderThickness="2" CornerRadius="10" Margin="10" Padding="10">
                    <StackPanel>
                        <TextBlock Text="📩 Responses" FontWeight="Bold" FontSize="14" Foreground="#2E7D32"/>
                        <TextBlock x:Name="txtResponses" FontSize="20" FontWeight="Bold" Foreground="Black"/>
                    </StackPanel>
                </Border>

                <Border Background="White" BorderBrush="#388E3C" BorderThickness="2" CornerRadius="10" Margin="10" Padding="10">
                    <StackPanel>
                        <TextBlock Text="📆 Counseling" FontWeight="Bold" FontSize="14" Foreground="#2E7D32"/>
                        <TextBlock x:Name="txtCounseling" FontSize="20" FontWeight="Bold" Foreground="Black"/>
                    </StackPanel>
                </Border>

                <Border Background="White" BorderBrush="#388E3C" BorderThickness="2" CornerRadius="10" Margin="10" Padding="10">
                    <StackPanel>
                        <TextBlock Text="✅ Checklist Steps" FontWeight="Bold" FontSize="14" Foreground="#2E7D32"/>
                        <TextBlock x:Name="txtSteps" FontSize="20" FontWeight="Bold" Foreground="Black"/>
                    </StackPanel>
                </Border>

                <Border Background="White" BorderBrush="#388E3C" BorderThickness="2" CornerRadius="10" Margin="10" Padding="10">
                    <StackPanel>
                        <TextBlock Text="🗓 Daily Checklists" FontWeight="Bold" FontSize="14" Foreground="#2E7D32"/>
                        <TextBlock x:Name="txtDaily" FontSize="20" FontWeight="Bold" Foreground="Black"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </DockPanel>
    </Grid>
</Window>
