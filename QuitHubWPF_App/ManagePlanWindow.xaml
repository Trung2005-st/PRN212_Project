<Window x:Class="QuitHubWPF_App.ManagePlanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:QuitHubWPF_App"
        Title="Manage Quit Plans"
        Height="600" Width="1100"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Window.Resources>
        <LinearGradientBrush x:Key="GreenGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#66BB6A" Offset="0"/>
            <GradientStop Color="#388E3C" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2E7D32"/>
            <Setter Property="BorderBrush" Value="#388E3C"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C8E6C9"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Assets/Images/backgroundImg1.png" Stretch="Fill"/>
        </Grid.Background>

        <DockPanel>
            <!-- Navbar -->
            <Border DockPanel.Dock="Top" Background="{StaticResource GreenGradient}" Height="50">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Title -->
                    <TextBlock Text="Manage Quit Plans"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"/>

                    <!-- Search -->
                    <Border Grid.Column="1"
                            Background="White"
                            CornerRadius="8"
                            BorderBrush="#388E3C"
                            BorderThickness="2"
                            Margin="10,0"
                            Width="220"
                            Height="30"
                            VerticalAlignment="Center">
                        <DockPanel LastChildFill="True">
                            <TextBlock Text=""
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="13"
                                       Margin="6,0,4,0"
                                       VerticalAlignment="Center"
                                       Foreground="#388E3C"/>
                            <TextBox x:Name="txtSearch"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     VerticalContentAlignment="Center"
                                     FontSize="13"
                                     Foreground="Gray"
                                     Padding="0"
                                     Text="Search user plan..."
                                     GotFocus="txtSearch_GotFocus"
                                     LostFocus="txtSearch_LostFocus"
                                     TextChanged="txtSearch_TextChanged"/>
                        </DockPanel>
                    </Border>

                    <!-- Admin -->
                    <Button Grid.Column="2"
                            Content="Admin"
                            Click="Back_Click"
                            Width="80"
                            Height="30"
                            Style="{StaticResource RoundedButtonStyle}"
                            Margin="10,0"/>

                    <!-- Logout -->
                    <Button Grid.Column="3"
                            Content="Logout"
                            Click="Logout_Click"
                            Background="Red"
                            Foreground="White"
                            FontWeight="Bold"
                            Width="80"
                            Height="30"
                            Margin="10,0,20,0"
                            BorderThickness="0"/>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Margin="20">
                <Border Background="White" CornerRadius="10" BorderBrush="#388E3C" BorderThickness="2" Padding="20">
                    <DockPanel LastChildFill="True">
                        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock x:Name="txtStatistic"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="#2E7D32"/>
                            <Button Content="View History"
                                    Width="120"
                                    Height="30"
                                    Margin="10,0,0,0"
                                    Click="ViewHistory_Click"
                                    Style="{StaticResource RoundedButtonStyle}"/>
                        </StackPanel>

                        <DataGrid x:Name="dgPlans"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  HeadersVisibility="Column"
                                  RowHeight="35"
                                  Margin="0,10,0,0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="User ID" Binding="{Binding UserId}" Width="*"/>
                                <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
                                <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="*"/>
                                <DataGridTextColumn Header="Quit Date" Binding="{Binding QuitDate}" Width="*"/>
                                <DataGridTextColumn Header="Reasons" Binding="{Binding ReasonsString}" Width="2*"/>
                                <DataGridTextColumn Header="Steps" Binding="{Binding StepsString}" Width="2*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </Border>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
