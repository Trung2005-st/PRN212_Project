<Window x:Class="QuitHubWPF_App.FeedbackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:QuitHubWPF_App"
        Title="Feedback" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize">

    <Window.Resources>
        <LinearGradientBrush x:Key="GreenGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#66BB6A" Offset="0"/>
            <GradientStop Color="#388E3C" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2E7D32"/>
            <Setter Property="BorderBrush" Value="#388E3C"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C8E6C9"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Assets/Images/backgroundImg1.png" Stretch="Fill"/>
        </Grid.Background>

        <DockPanel>
            <!-- Navbar -->
            <Border DockPanel.Dock="Top" Background="{StaticResource GreenGradient}" Height="50">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Submit Your Feedback"
                               FontSize="16" FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"/>

                    <Button Content="User" Grid.Column="1"
                            Width="80" Height="30"
                            Margin="10,0"
                            Style="{StaticResource RoundedButtonStyle}"
                            Click="Back_Click"/>

                    <Button Content="Logout" Grid.Column="2"
                            Width="80" Height="30"
                            Margin="10,0,20,0"
                            Background="Red"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Click="Logout_Click"/>
                </Grid>
            </Border>

            <!-- Main content -->
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="400" />
                </Grid.ColumnDefinitions>

                <!-- Feedback list -->
                <Border Background="White" CornerRadius="10"
                        BorderBrush="#388E3C" BorderThickness="2"
                        Margin="10">
                    <ListBox x:Name="lstFeedbacks" BorderThickness="0" Background="Transparent" Padding="10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#2E7D32"
                                        BorderThickness="2"
                                        CornerRadius="10"
                                        Margin="5"
                                        Padding="10"
                                        Background="White">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Emoji}" FontSize="24" Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding Message}" FontSize="14" TextWrapping="Wrap" Foreground="Black" Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding SentAt}" FontSize="10" Foreground="Gray" TextAlignment="Right"/>

                                        <TextBlock Text="📩 You have a response"
                                                   FontSize="12"
                                                   FontWeight="Bold"
                                                   Foreground="#2E7D32"
                                                   TextDecorations="Underline"
                                                   Cursor="Hand"
                                                   Margin="0,5,0,0"
                                                   Visibility="{Binding HasResponse, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                   MouseLeftButtonUp="ResponseLabel_Click"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>

                <!-- Submit Form -->
                <Border Grid.Column="1"
                        Background="White"
                        CornerRadius="10"
                        BorderBrush="#388E3C"
                        BorderThickness="2"
                        Margin="10"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="Select Emoji:" FontWeight="Bold" Margin="5,0,0,2"/>
                        <WrapPanel x:Name="EmojiPanel" HorizontalAlignment="Center" Margin="0,0,0,10">
                            <RadioButton GroupName="Emojis" Content="😢 Very Bad" Tag="😢" FontSize="18" Margin="5"/>
                            <RadioButton GroupName="Emojis" Content="😟 Bad" Tag="😟" FontSize="18" Margin="5"/>
                            <RadioButton GroupName="Emojis" Content="😐 Neutral" Tag="😐" FontSize="18" Margin="5"/>
                            <RadioButton GroupName="Emojis" Content="🙂 Good" Tag="🙂" FontSize="18" Margin="5"/>
                            <RadioButton GroupName="Emojis" Content="😁 Excellent" Tag="😁" FontSize="18" Margin="5"/>
                        </WrapPanel>

                        <TextBlock Text="Your Message:" FontWeight="Bold" Margin="5,0,0,2"/>
                        <TextBox x:Name="txtMessage" Height="60" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,10"/>

                        <Button Content="Submit Feedback"
                                Width="150"
                                Height="35"
                                HorizontalAlignment="Center"
                                Click="SubmitFeedback_Click"
                                Style="{StaticResource RoundedButtonStyle}"
                                Background="#2E7D32"
                                Foreground="White"
                                BorderThickness="0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
