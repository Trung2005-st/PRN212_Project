<Window x:Class="QuitHubWPF_App.PlanHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Plan History" Height="500" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F1F8E9">

    <Window.Resources>
        <LinearGradientBrush x:Key="GreenGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#66BB6A" Offset="0"/>
            <GradientStop Color="#388E3C" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2E7D32"/>
            <Setter Property="BorderBrush" Value="#388E3C"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C8E6C9"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Border Background="White" CornerRadius="10" BorderBrush="#388E3C" BorderThickness="2" Padding="20">
            <DockPanel>
                <!-- Header -->
                <DockPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                    <TextBlock Text="📜 Quit Plan History"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#2E7D32"/>
                    <Button Content="Close"
                            Width="80"
                            Height="30"
                            HorizontalAlignment="Right"
                            Click="Close_Click"
                            Background="#C62828"
                            Foreground="White"
                            FontWeight="Bold"
                            Style="{StaticResource RoundedButtonStyle}"
                            DockPanel.Dock="Right"/>
                </DockPanel>

                <!-- DataGrid -->
                <DataGrid x:Name="dgHistory"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          RowHeight="60"
                          ColumnHeaderHeight="40"
                          FontSize="14"
                          Margin="0,10,0,0"
                          Background="White"
                          Foreground="Black"
                          TextElement.FontFamily="Segoe UI">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Quit Date" Binding="{Binding QuitDate}" Width="1.5*" />

                        <!-- Reasons -->
                        <DataGridTemplateColumn Header="Reasons" Width="2.5*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ItemsControl ItemsSource="{Binding Reasons}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding StringFormat=• {0}}" TextWrapping="Wrap" Margin="0,2"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Steps -->
                        <DataGridTemplateColumn Header="Steps" Width="3.5*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="120">
                                        <ItemsControl ItemsSource="{Binding Steps}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding StringFormat=• {0}}" TextWrapping="Wrap" Margin="0,2"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>
    </Grid>
</Window>
