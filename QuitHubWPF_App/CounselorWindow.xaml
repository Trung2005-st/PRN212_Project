<Window x:Class="QuitHubWPF_App.CounselorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Counselor Dashboard" Height="600" Width="1200"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize">

    <Window.Resources>
        <LinearGradientBrush x:Key="GreenGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#66BB6A" Offset="0"/>
            <GradientStop Color="#388E3C" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2E7D32"/>
            <Setter Property="BorderBrush" Value="#388E3C"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C8E6C9"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Assets/Images/backgroundImg1.png" Stretch="Fill"/>
        </Grid.Background>

        <DockPanel>

            <!-- NAVBAR -->
            <Border DockPanel.Dock="Top" Background="{StaticResource GreenGradient}" Height="50">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Counselor Dashboard"
                               FontSize="16" FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="20,0,0,0" />

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0">
                        <Button Content="Logout"
                                Click="Logout_Click"
                                Background="Red"
                                Foreground="White"
                                FontWeight="Bold"
                                Width="80"
                                Height="30"
                                BorderThickness="0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- MAIN CONTENT -->
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="400" />
                </Grid.ColumnDefinitions>

                <!-- SCHEDULE LIST -->
                <Border Background="White" CornerRadius="10" BorderBrush="#388E3C" BorderThickness="2" Margin="10">
                    <ListView x:Name="lvSchedule" Margin="10" SelectionChanged="lvSchedule_SelectionChanged">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Customer Name" Width="130">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding User.FullName}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Appointment Time" Width="130" DisplayMemberBinding="{Binding ScheduleTime}"/>
                                <GridViewColumn Header="Topic" Width="100" DisplayMemberBinding="{Binding Topic}"/>
                                <GridViewColumn Header="Status" Width="100" DisplayMemberBinding="{Binding IsConfirmed}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Border>

                <!-- FORM -->
                <Border Grid.Column="1" Background="White" CornerRadius="10" BorderBrush="#388E3C" BorderThickness="2" Margin="10" Padding="20">
                    <StackPanel>

                        <TextBlock Text="Customer Name:" FontWeight="Bold" Margin="0,10,0,2"/>
                        <TextBox x:Name="txtCustomerName" Margin="0,0,0,5"/>

                        <TextBlock Text="Appointment Time:" FontWeight="Bold" Margin="0,10,0,2"/>
                        <DatePicker x:Name="dpAppointmentTime" Margin="0,0,0,5"/>

                        <TextBlock Text="Topic:" FontWeight="Bold" Margin="0,10,0,2"/>
                        <TextBox x:Name="txtTopic" Margin="0,0,0,5"/>

                        <TextBlock Text="Status:" FontWeight="Bold" Margin="0,10,0,2"/>
                        <TextBox x:Name="txtStatus" Margin="0,0,0,5" IsReadOnly="True"/>

                        <WrapPanel HorizontalAlignment="Center" Margin="0,20,0,0">
                            <Button x:Name="btnAdd" Content="Add Appointment" Click="btnAdd_Click" Style="{StaticResource RoundedButtonStyle}" Width="130"/>
                            <Button x:Name="btnChangeStatus" Content="Change Status" Click="btnChangeStatus_Click" Style="{StaticResource RoundedButtonStyle}" Width="149"/>
                            <Button x:Name="btnUpdate" Content="Save Changes" Click="btnUpdate_Click" Style="{StaticResource RoundedButtonStyle}" Width="130"/>
                            <Button x:Name="btnDelete" Content="Delete Appointment" Click="btnDelete_Click" Style="{StaticResource RoundedButtonStyle}" Width="154"/>
                        </WrapPanel>

                    </StackPanel>
                </Border>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
